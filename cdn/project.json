{
  "name": "cdn",
  "sourceRoot": "libs/cdn/src",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "libs/cdn/jest.config.js"
      }
    },
    "build": {
      "executor": "@nrwl/web:webpack",
      "options": {
        "entry": "libs/cdn/src/index.js",
        "outputPath": "dist/libs/cdn"
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "cd libs/cdn && npm version patch --no-git-tag-version",
          "aws s3 cp dist/libs/cdn/cdn.min.js s3://my-bucket/cdn-$(node -p \"require('../../package.json').version\").min.js"
        ]
      },
      "dependsOn": [
        "build"
      ]
    }
  }
}
